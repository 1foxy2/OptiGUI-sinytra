{
  "schemaVersion": 1,
  "id": "optigui",
  "version": "${version}",
  "name": "OptiGUI",
  "description": "A client side drop-in replacement for OptiFine custom GUIs",
  "authors": [
    "opekope2"
  ],
  "contact": {
    "homepage": "https://opekope2.github.io/OptiGUI-Next",
    "sources": "https://github.com/opekope2/OptiGUI-Next",
    "issues": "https://github.com/opekope2/OptiGUI-Next/issues"
  },
  "license": "MIT",
  "icon": "assets/optigui/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.InitializerKt::initialize"
      }
    ],
    "optigui": [
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.BuiltinFilterFactoriesKt::initializeFilterFactories"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.BuiltinPreprocessorsKt::initializePreprocessors"
      }
    ]
  },
  "mixins": [
    "optigui.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabricloader}",
    "fabric-lifecycle-events-v1": "*",
    "fabric-networking-api-v1": "*",
    "fabric-events-interaction-v0": "*",
    "fabric-language-kotlin": ">=${fabric_language_kotlin}",
    "minecraft": ">=1.18",
    "java": ">=${java}"
  },
  "recommends": {
    "knowmyname": "*"
  },
  "suggests": {
    "animatica": "*"
  },
  "conflicts": {
    "optifabric": "*"
  }
}
