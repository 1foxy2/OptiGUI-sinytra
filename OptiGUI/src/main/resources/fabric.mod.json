{
  "schemaVersion": 1,
  "id": "optigui",
  "version": "$version",
  "name": "OptiGUI",
  "description": "Custom inventory GUIs on Fabric&Quilt with OptiFine resource pack support&many more features",
  "authors": [
    "opekope2"
  ],
  "contact": {
    "homepage": "https://opekope2.github.io/OptiGUI",
    "sources": "https://github.com/opekope2/OptiGUI",
    "issues": "https://github.com/opekope2/OptiGUI/issues"
  },
  "license": "MIT",
  "icon": "assets/optigui/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.InitializerKt::initialize"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.selector.SelectorsKt::registerSelectors"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.selector.SelectorsKt::registerLoadTimeSelectors"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.TextureReplacer"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.FilterLoader"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.interaction.InteractionHandler"
      }
    ]
  },
  "mixins": [
    "optigui.mixins.json"
  ],
  "accessWidener": "optigui.accesswidener",
  "depends": {
    "fabricloader": ">=$fabric_loader",
    "fabric-events-interaction-v0": "*",
    "fabric-key-binding-api-v1": "*",
    "fabric-lifecycle-events-v1": "*",
    "fabric-networking-api-v1": "*",
    "fabric-resource-loader-v0": "*",
    "fabric-language-kotlin": ">=$fabric_language_kotlin",
    "minecraft": ">=$minecraft",
    "java": ">=$java"
  },
  "recommends": {
    "animatica": "*"
  },
  "custom": {
    "mc-publish": {
      "loaders": [
        "fabric",
        "quilt"
      ],
      "dependencies": [
        "fabric-api(required)"
      ]
    }
  }
}
