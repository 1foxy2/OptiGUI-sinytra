{
  "schemaVersion": 1,
  "id": "optigui",
  "version": "${version}",
  "name": "OptiGUI",
  "description": "Custom inventory GUIs on Fabric&Quilt with OptiFine resource pack support&many more features",
  "authors": [
    "opekope2"
  ],
  "contact": {
    "homepage": "https://opekope2.github.io/OptiGUI",
    "sources": "https://github.com/opekope2/OptiGUI",
    "issues": "https://github.com/opekope2/OptiGUI/issues"
  },
  "license": "MIT",
  "icon": "assets/optigui/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.InitializerKt::initialize"
      }
    ],
    "optigui": [
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.BuiltinFilterFactoriesKt::initializeFilterFactories"
      },
      {
        "adapter": "kotlin",
        "value": "opekope2.optigui.internal.BuiltinPreprocessorsKt::initializePreprocessors"
      }
    ]
  },
  "mixins": [
    "optigui.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-lifecycle-events-v1": "*",
    "fabric-networking-api-v1": "*",
    "fabric-events-interaction-v0": "*",
    "fabric-language-kotlin": ">=${fabric_language_kotlin}",
    "minecraft": ">=1.18 <=1.20",
    "java": ">=${java}",
    "optiglue": [
      "=${version}-mc.1.18",
      "=${version}-mc.1.18.2",
      "=${version}-mc.1.19",
      "=${version}-mc.1.19.3"
    ]
  },
  "recommends": {
    "animatica": "*"
  },
  "custom": {
    "mc-publish": {
      "loaders": [
        "fabric",
        "quilt"
      ],
      "dependencies": [
        "fabric-api(required)"
      ]
    }
  }
}
